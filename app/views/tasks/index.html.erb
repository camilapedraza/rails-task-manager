<h2>My Tasks</h2>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed ? "[x]" : "[ ]" %>
      <%= link_to task.title, task_path(task)  %> -
      <%= link_to 'delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete task: \"#{task.title}\"?"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path() %>
