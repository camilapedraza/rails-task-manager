<%= form_with model: task do |f| %>
  <%= f.label :title %></br>
  <%= f.text_field :title %></br>
  <%= f.label :details %></br>
  <%= f.text_area :details %></br>
  <% if task.persisted? %>
    <%= f.label :completed %>
    <%= f.check_box :completed %></br>
  <% end %>
  <%= f.submit "Update task!" %></br>
<% end %>
